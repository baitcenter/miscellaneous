{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "declaration": false,
    "lib": ["dom", "es2017"],
    "strict": true,
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "sourceMap": false,
    "moduleResolution": "node",
    "removeComments": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
